<%= javascript_include_tag 'update_text.js' %>
<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">


<style>
body{
  background-size: 70% 100%;
}

h1, h2, h3, h4, h5, h6, p{
  color:black;
}

*{
  font-family: 'Roboto', serif;
}
#content{
  background-color:rgba(255, 255, 255, .5);
  margin-top: 50px;
  height:500px;
  width:400px;
  border:1px solid black;

  margin-left:auto;
  margin-right: auto;
  border-radius: 10px;
}


.img{
  border-radius: 5px;
}

</style>

<div id="content" class="fadein">

<h2 id=rest_name class="fadein"><%= @name_ %> </h2>
<h3 id="type" class="fadein"><%= @venuetype %></h3>
<img src="<%= @url %>" alt="" id="img" class="fadein" />
<p id='pricing' class="fadein">Pricing: <%= @price %></p>
<p id="dist" class="fadein">Distance: <%= @dist %> Miles</p>
</div>

<button id="new">New</button>
<%= button_to "Swipe Right", right_swipe_path, :id => "btn_rs" %>
